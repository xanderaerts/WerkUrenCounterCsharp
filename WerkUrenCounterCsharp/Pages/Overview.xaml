<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WerkUrenCounterCsharp.Pages.Overview"
             Title="Overview">
    <VerticalStackLayout>
        <ScrollView>
        <ListView ItemsSource="{Binding workdayevents}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding StartEvent}"/>
                        <Label Text="{Binding Action}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>