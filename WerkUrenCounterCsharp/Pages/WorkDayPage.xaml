<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WerkUrenCounterCsharp.Pages.WorkDayPage"
             Title="Werkdag">
    <VerticalStackLayout>
        <Button Text="{Binding changeStateButtonText}" VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding changeStateButton}"/>
        <Label Text="{Binding currentHours}" VerticalOptions="Center" HorizontalOptions="Center" Padding="20"/>

        <Label Text="{Binding totalDriveHoursLabel}" VerticalOptions="Center" HorizontalOptions="Center" Padding="50"/>
        <Label Text="{Binding totalRestHoursLabel}" VerticalOptions="Center" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>